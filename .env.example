# PostgreSQL Database Configuration (Render)
# Replace with your actual Render PostgreSQL connection string
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=9000

# Model Configuration
MODEL_NAME=mistral-7b-instruct
MAX_TOKENS=4096
DEFAULT_TEMPERATURE=0.7

# Model Server Configuration
MODEL_SERVER_HOST=127.0.0.1
MODEL_SERVER_PORT=8081

# GPU Configuration (RTX 3050)
GPU_LAYERS=20
CONTEXT_SIZE=32768
BATCH_SIZE=2048
THREADS=8

# Security Configuration
REQUIRE_API_KEY=true
API_KEYS=your_api_key_1,your_api_key_2,your_api_key_3

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000
MAX_REQUESTS_PER_DAY=10000

# Content Filtering
MAX_PROMPT_LENGTH=8192
ENABLE_CONTENT_FILTER=true

# IP Filtering (Optional - leave empty to allow all IPs)
ALLOWED_IPS=
BLOCKED_IPS=

# Request Limits
MAX_CONSECUTIVE_REQUESTS=100

# Logging
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=*

# Database Pool Settings
DB_MIN_CONNECTIONS=1
DB_MAX_CONNECTIONS=10
DB_COMMAND_TIMEOUT=30